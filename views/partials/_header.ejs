<form action="/login" method="POST">
  <% if (user_ID !== 'undefined') { %>
    <h2><%= user_ID.email; %></h2>
    <form action="/logout" method="POST">
      <button>Logout</button>
    </form>
  <% } else { %>
    <input id="user_email" type="text" name="user_email" placeholder="User Email">
    <button>Login</button>
  <% } %>
</form>