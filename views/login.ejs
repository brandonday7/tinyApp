<% if (typeof(errorMessage) !== 'undefined') { %> <!-- JS and undefined are weird, this is only thing that works -->
  <h3><%= errorMessage %></h3> <!-- if there is an error message, display it -->
  <% errorMessage = undefined; %> <!-- reset error message to undefined for next call -->
<% } %>
<form action="/login" method="POST"> <!-- input login info -->
    <h3>Login</h3>
    <p>Input your email: </p>
    <input id="user_email" type="email" name="user_email" placeholder="example@email.com">
    <p>Input your password: </p>
    <input id="user_password" type="password" name="user_password">
    <button>Login</button>
</form>
<form action="/register" method="POST">
  <a href="./register">Register</a> <!-- link to registration page if you don't have login info -->
</form>